<turbo-frame id="suggestion_<%= suggestion.id %>">
  <div class='suggestion-box'>
    <h5><%= suggestion.suggestion %></h5>
    <div class="info-bar d-flex justify-content-between">
      <div class="date-comments d-flex">
        <p> ‚ù§Ô∏è Likes (14) </p>

      <div data-controller="comments">
        <p data-action="click->comments#toggle" style="cursor:pointer;">
          üí¨ Comments (<%= suggestion.suggestion_comments.count %>)
        </p>

        <div data-comments-target="comments" class="hidden">
        <% suggestion.suggestion_comments.each do |comment| %>
          <p> <%= comment.comment %></p>
          <% end %>
          <form> <!-- new comment form --> </form>
        </div>
      </div>



        <p><%= suggestion.created_at.strftime("%-d %B %Y") %></p>
        </div>

          <div class="actioned d-flex">

            <% if current_user.admin? %>
              <% if suggestion.actioned.nil? %>
                  <%= button_to "‚úÖ", suggestion_path(suggestion), method: :patch, params: { suggestion: { actioned: true } }, form: { data: { turbo: true } }, class: "tick-btn" %>
                  <%= button_to "‚ùå", suggestion_path(suggestion), method: :patch, params: { suggestion: { actioned: false } }, form: { data: { turbo: true } }, class: "cross-btn" %>
              <% else %>
                <%= suggestion.actioned ? "‚úÖ" : "‚ùå" %>
              <% end %>
            <% else %>
              <%= suggestion.actioned ? "‚úÖ" : "‚ùå" %>
            <% end %>
    </div>
  </div>
  </div>
</turbo-frame>
