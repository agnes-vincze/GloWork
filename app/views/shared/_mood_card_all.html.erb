<div class="card-mood">
  <div class="range-dropdown">
    <%= form_with url: moodtracker_path, method: :get, local: true do %>
                <%= select_tag :range, options_for_select([
                    ['Last 7 days', '7days'],
                    ['Last 6 months', '6months'],
                    ['Last year', '1year']
                  ], params[:range]), class: "form-select", onchange: "this.form.submit();" %>
              <% end %>
  </div>
  <h4><%= title %></h4>

  <div class="d-flex" style="height: 28px; font-size: 20px; margin-bottom:20px; margin-top:20px;">
    <div class="progress flex-grow-1" style="height: 28px;">
      <div class="progress-bar" role="progressbar" style="width: <%= data[:happy] %>%; background-color:#93F271;"></div>
    </div>
    <p class="ps-3"><%= data[:happy] %>% 😀</p>
  </div>

  <div class="d-flex" style="height: 28px; font-size: 20px; margin-bottom:20px;">
    <div class="progress flex-grow-1" style="height: 28px;">
      <div class="progress-bar" role="progressbar" style="width: <%= data[:neutral] %>%; background-color:#FFEC1C;"></div>
    </div>
    <p class="ps-3"><%= data[:neutral] %>% 😐</p>
  </div>

  <div class="d-flex" style="height: 28px; font-size: 20px; margin-bottom:20px;">
    <div class="progress flex-grow-1" style="height: 28px;">
      <div class="progress-bar" role="progressbar" style="width: <%= data[:sad] %>%; background-color:#FF7272;"></div>
    </div>
    <p><%= data[:sad] %>% ☹️</p>
  </div>

  <div>
    <%= render "shared/comparison" %>
  </div>
    <%= render "shared/emojis", emojis: emojis %>
</div>
