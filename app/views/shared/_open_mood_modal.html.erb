<div id="open-mood-modal">
  <%# Modal 1 %>
  <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
        <div class="open-moods-emojis">
          <p>HOW DO YOU FEEL TODAY?</p>
          <% [ [1, "‚òπÔ∏è"], [2, "üòê"], [3, "üòÄ"] ].each do |mood_value, emoji| %>
            <%= simple_form_for Moodtracker.new, html: { class: "inline-form d-inline" }, data: { turbo_frame: "modal-output", controller: "mood" } do |f| %>
              <%= f.input :mood, as: :hidden, input_html: { value: mood_value } %>
          <button class="open-sugg-emoji-btns" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal"><%= f.button :submit, emoji, class: "btn btn-primary mood-button" %></button>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Modal 2 %>
  <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-body">
          <p id="warning">‚ùóÔ∏è Please be respectful and constructive in your suggestions. You will not be able to delete them after submitting. ‚ùóÔ∏è</p>
          <div class="open-sugg-form">
          <%= simple_form_for(Suggestion.new) do |f| %>
            <div class="suggestion-container">
              <%= f.text_area :suggestion, placeholder: "Type your suggestion here...", label: false, class: "suggestion-textbox" %>
            </div>
            <div class="open-sugg-buttons">
            <button class="button-cancel btn btn-secondary" type="button" onclick="window.location='<%= dashboard_path %>'">No, thanks</button>
            <button class="button-accept" data-bs-target="#exampleModalToggle"><%= f.button :submit, "Add suggestion"%></button>
            </div>
            </div>
          <% end %>
        </div>


      </div>
    </div>
  </div>
</div>
