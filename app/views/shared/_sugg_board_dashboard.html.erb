<% @suggestions = Suggestion.order(created_at: :desc) %>
<div class="container-dash-sugg" >
  <div class='d-flex'>
    <div class='left' style="width: 90%;">
    <h5>LATEST SUGGESTIONS</h5>
    <p id="warning-dash"> ❗️ Please be respectful and constructive in your suggestions. You will not be able to delete them after submitting. ❗️ </p>
      <div class='suggestions-main'>
        <% if @suggestions.any? %>
          <% @suggestions.take(4).each do |suggestion| %>
          <div class="suggestion-post">
             <%= render partial: "suggestions/suggestion", locals: { suggestion: suggestion } %>
            </div>
          <% end %>
        <% else %>
          <p>No suggestions have been made yet</p>
        <% end %>
      </div>
    </div>

    <div class='gap'></div>
  </div>
</div>
