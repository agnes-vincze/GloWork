
<div id="comment-form">
  <div class="modal-card">
    <%= link_to root_path do %>
      <h6><i class="fa-solid fa-xmark" style="color: #262627;"></i></h6>
    <% end %>
    <h2>Please tell us more about your current mood</h2>
     <%= simple_form_for @moodtracker do |f| %>
      <%= f.input :comment, placeholder: "Share here..." %>
      <%= f.button :submit, "NEXT", class: "button-accept" %>
    <% end %>
  </div>
</div>
